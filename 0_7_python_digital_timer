# Timer with a twist of Motivation
# Timer for your plank holding motivation

import time

name = input("Whats your name?: ")
print(f"hello and welcome {name}")
print("This is a friendly digital timer, more like your workout buddy!")
print("Lets get you started on your fitness journey!")
level = input(
    "Where do you stand in the fitness journey? beginner/ moderate/ advanced: ")
print(f"Okay! {name} is on {level} level of fitness journey")

while True:
    exercise = input("What exercise are you going to do now? (q to quit): ")
    if exercise.lower() == "q":
        break

    timer_secs = int(input(
        f"For how long are you going to engage in {exercise}, mention in seconds? : "))

    for x in range(timer_secs, 0, -1):
        seconds = x % 60
        minutes = int((x/60) % 60)
        hours = int(x/3600)
        print(f"{hours:02} : {minutes:02} : {seconds:02}")
        time.sleep(1)

    print("Horray! You did it!!")
    print("Lets keep this streak Alive and going!\n")

print("You did a great job today! See you again tomorrow!")
print("Lets keep this streak Alive and going!")
print(f"Bye {name}")

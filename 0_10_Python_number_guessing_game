# Python Number Guessing Game

import random
lowest_num = 1
highest_num = 10
answer = random.randint(lowest_num, highest_num)
guesses = 0
is_running = True

print("Python Number Guessing Game")
print(f"Select a number from {lowest_num} to {highest_num} ")

while is_running:
    guess = input("Enter your guess: ")
    if guess.isdigit():
        guess = int(guess)
        guesses += 1

        if guess < lowest_num or guess > highest_num:
            print("out of range!")
            print(f"Select a number from {lowest_num} to {highest_num} ")
        elif guess < answer:
            print("too low, tryagain!")
        elif guess > answer:
            print("too high, try again!")
        else:
            print(f"correct answer is {answer}")
            print(
                f"it took you {guesses} guesses to reach the correct answer!")
            is_running = False

    else:
        print("Invalid guess")
        print(f"Select a number from {lowest_num} to {highest_num} ")
